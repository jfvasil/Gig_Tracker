<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.D424_Captstone_jv" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_brown</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/primary_brown</item>
        <item name="colorSecondaryVariant">@color/primary_red</item>
        <item name="colorOnSecondary">@android:color/white</item>


        <item name="android:windowBackground">@color/primary_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.D424_Captstone_jv.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.D424_Captstone_jv.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.D424_Captstone_jv.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>